#! /bin/sh

PROG=$0
die() {
    echo
    echo "$@"
    exit 1
}

BASEDIR="$(dirname "$(readlink -f "$0")")"
echo "Script Dir: $BASEDIR"

[ -f "$BASEDIR/.env" ] || die ".env is required"

echo "Updating Repo"
git pull

echo "Updating docker"
sudo docker compose build && sudo docker compose up -d

echo "Done"